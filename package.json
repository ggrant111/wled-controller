{
  "name": "wled-controller",
  "version": "1.0.0",
  "description": "Modern web app to control WLED devices via DDP (UDP 4048)",
  "main": "server/index.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "next dev",
    "dev:server": "tsx watch server/index.ts",
    "build": "next build",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:client": "next start",
    "start:server": "tsx server/index.ts",
    "type-check": "tsc --noEmit",
    "lint": "next lint"
  },
  "keywords": [
    "wled",
    "led",
    "controller",
    "ddp",
    "udp",
    "lighting"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.548.0",
    "next": "^16.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "tsx": "^4.7.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
}
